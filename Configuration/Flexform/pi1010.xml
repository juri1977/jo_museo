<T3DataStructure>
  <sheets>
    <sDEF>
      <ROOT>
        <TCEforms>
          <sheetTitle>Konfiguration</sheetTitle>
        </TCEforms>
        <type>array</type>
        <el>
		  <settings.layout>
			<TCEforms>
				<label>Farbe f체r Hovereffekt</label>
				<config type="array">
					<type>select</type>
					<items type="array">
						<numIndex index="0" type="array">
						  <numIndex index="0">blau</numIndex>
						  <numIndex index="1">1</numIndex>
						</numIndex>
						<numIndex index="1" type="array">
						  <numIndex index="0">orange</numIndex>
						  <numIndex index="1">2</numIndex>
						</numIndex>
					</items>
				</config>
			</TCEforms>
		  </settings.layout>
		   <settings.initialview>
			<TCEforms>
				<label>Initiales Template zur Darstellung der Objekte</label>
				<onChange>reload</onChange>
				<config type="array">
					<type>select</type>
					<items type="array">
						<numIndex index="0" type="array">
						  <numIndex index="0">Liste</numIndex>
						  <numIndex index="1">list</numIndex>
						</numIndex>
						<numIndex index="1" type="array">
						  <numIndex index="0">Kacheln</numIndex>
						  <numIndex index="1">kacheln</numIndex>
						</numIndex>
						<numIndex index="2" type="array">
						  <numIndex index="0">Kacheln mit Text</numIndex>
						  <numIndex index="1">kacheln_with_text</numIndex>
						</numIndex>
						<numIndex index="3" type="array">
						  <numIndex index="0">Karte</numIndex>
						  <numIndex index="1">map</numIndex>
						</numIndex>
						<numIndex index="4" type="array">
						  <numIndex index="0">Kacheln mit Text unten (siehe Kulthura Personen)</numIndex>
						  <numIndex index="1">newstyle</numIndex>
						</numIndex>
						<numIndex index="5" type="array">
						  <numIndex index="0">Editionsprojekte Kacheln</numIndex>
						  <numIndex index="1">editpro_kacheln</numIndex>
						</numIndex>
					</items>
				</config>
			</TCEforms>
		  </settings.initialview>
		  <settings.imghovereffekt>
			<TCEforms>
				<label>Bilder hover Effekt einschalten</label>
				<displayCond>FIELD:settings.initialview:=:newstyle</displayCond>
				<config>
					<type>check</type>
				</config>
			</TCEforms>
		  </settings.imghovereffekt>
		  <settings.showinstdist>
				<TCEforms>
					<label>Institution verteilung anzeigen (Th체ringer Insititutionen/Partener/Alle anzeigen)</label>
					<config>
						<type>check</type>
					</config>
				</TCEforms>
		  </settings.showinstdist>
		  <settings.ansichten>
			<TCEforms>
				<label>Ansichten Auswahl</label>
				<config>
					<type>select</type>
					<items type="array">
						<numIndex index="0" type="array">
							<numIndex index="0">Liste</numIndex>
							<numIndex index="1">list</numIndex>
						</numIndex>
						<numIndex index="1" type="array">
							<numIndex index="0">Kacheln</numIndex>
							<numIndex index="1">kacheln</numIndex>
						</numIndex>
						<numIndex index="2" type="array">
							<numIndex index="0">Karte</numIndex>
							<numIndex index="1">map</numIndex>
						</numIndex>
						<numIndex index="3" type="array">
							<numIndex index="0">Kacheln mit Text</numIndex>
							<numIndex index="1">kacheln_with_text</numIndex>
						</numIndex>
						<numIndex index="4" type="array">
							<numIndex index="0">Editionsprojekte Kacheln</numIndex>
							<numIndex index="1">editpro_kacheln</numIndex>
						</numIndex>
					</items>
					<maxitems>5</maxitems>
					<size>5</size>
				</config>
			</TCEforms>
		</settings.ansichten>
		<settings.listeandmap>
			<TCEforms>
				<label>Liste und Map auf selber Seite anzeigen (Tab umschaltung)</label>
				<displayCond>FIELD:settings.initialview:=:list</displayCond>
				<onChange>reload</onChange>
				<config>
					<type>check</type>
				</config>
			</TCEforms>
	  	</settings.listeandmap>
      <settings.sortgeo>
        <TCEforms>
          <label>Liste nach Ortsnamen sortieren</label>
          <displayCond>FIELD:settings.initialview:=:list</displayCond>
          <config>
            <type>check</type>
          </config>
        </TCEforms>
      </settings.sortgeo>
	  	<settings.broschuere>
			<TCEforms>
				<label>Brosch체renlink</label>
				<displayCond>FIELD:settings.listeandmap:=:1</displayCond>
				<config>
					<type>input</type>
					<size>200</size>
				</config>
			</TCEforms>
	  	</settings.broschuere>
	  	<settings.listspalten>
			<TCEforms>
				<label>Spalten anzahl bei der Liste</label>
				<config>
					<type>input</type>
					<size>200</size>
				</config>
			</TCEforms>
	  	</settings.listspalten>
	  	<settings.igalerie>
	        <TCEforms>
	            <label>Bilder ausw채hlen</label>
	            <config>
	                <type>inline</type>
	                <maxitems>99</maxitems>
	                <foreign_table>sys_file_reference</foreign_table>
	                <foreign_table_field>tablenames</foreign_table_field>
	                <foreign_label>uid_local</foreign_label>
	                <foreign_sortby>sorting_foreign</foreign_sortby>
	                <foreign_selector>uid_local</foreign_selector>
					<foreign_types type="array">
						<numIndex index="2" type="array">
							  <showitem>--palette--;LLL:EXT:lang/locallang_tca.xlf:sys_file_reference.imageoverlayPalette;imageoverlayPalette,--palette--;;filePalette</showitem>
						</numIndex>
					</foreign_types>
	                <foreign_selector_fieldTcaOverride type="array">
	                    <config>
	                        <appearance>
	                            <elementBrowserType>file</elementBrowserType>
	                            <elementBrowserAllowed>jpg,png</elementBrowserAllowed>
	                        </appearance>
	                    </config>
	                </foreign_selector_fieldTcaOverride>
	                <foreign_match_fields type="array">
	                    <fieldname>image</fieldname>
	                </foreign_match_fields>
	                <appearance type="array">
	                    <newRecordLinkAddTitle>1</newRecordLinkAddTitle>
	                    <headerThumbnail>
	                        <field>uid_local</field>
	                        <height>64</height>
	                        <width>64</width>
	                    </headerThumbnail>
	                </appearance>
	            </config>
	        </TCEforms>
	    </settings.igalerie>
	    <settings.suche>
    		<TCEforms>
        		<label>
					Link zu Suchseite
				</label>
        		<config>
					<type>group</type>
					<internal_type>db</internal_type>
					<allowed>pages</allowed>
					<size>1</size>
					<maxitems>1</maxitems>
					<minitems>0</minitems>
					<show_thumbs>1</show_thumbs>
					<wizards>
					  <suggest>
						<type>suggest</type>
					  </suggest>
					</wizards>
				</config>
			</TCEforms>
		</settings.suche>
		<settings.allg_classi>
			<TCEforms>
				<label>Falls Classification nicht angegeben, allgemeine Classification hier eingeben</label>
				<config>
					<type>input</type>
					<size>200</size>
				</config>
			</TCEforms>
	  	</settings.allg_classi>
	  	<settings.lng_lat_tausch>
			<TCEforms>
				<label>Coordinaten vertauscht</label>
				<config>
					<type>check</type>
				</config>
			</TCEforms>
	  	</settings.lng_lat_tausch>
	  	<settings.overlay>
			<TCEforms>
				<label>Weitere Layers angebene (GEOJSON)</label>
				<config>
					<type>inline</type>
					<maxitems>10</maxitems>
					<foreign_table>sys_file_reference</foreign_table>
					<foreign_table_field>tablenames</foreign_table_field>
					<foreign_label>uid_local</foreign_label>
					<foreign_sortby>sorting_foreign</foreign_sortby>
					<foreign_selector>uid_local</foreign_selector>
					<foreign_selector_fieldTcaOverride type="array">
						<config>
							<appearance>
								<elementBrowserType>file</elementBrowserType>
								<elementBrowserAllowed>json,geojson</elementBrowserAllowed>
							</appearance>
						</config>
					</foreign_selector_fieldTcaOverride>
					<appearance type="array">
						<createNewRelationLinkTitle>Add layer</createNewRelationLinkTitle>
						<useSortable>TRUE</useSortable>
						<showPossibleLocalizationRecords>FALSE</showPossibleLocalizationRecords>
						<showRemovedLocalizationRecords>FALSE</showRemovedLocalizationRecords>
						<showSynchronizationLink>FALSE</showSynchronizationLink>
						<enabledControls type="array">
							<info>TRUE</info>
							<new>TRUE</new>
							<dragdrop>TRUE</dragdrop>
							<sort>TRUE</sort>
							<hide>TRUE</hide>
							<delete>TRUE</delete>
							<localize></localize>
						</enabledControls>
						<levelLinksPosition>both</levelLinksPosition>
					</appearance>
				</config>
			</TCEforms>
		</settings.overlay>
		<settings.sortbydate>
			<TCEforms>
				<label>Sort by Day</label>
				<config>
					<type>check</type>
				</config>
			</TCEforms>
	  	</settings.sortbydate>
        </el>
      </ROOT>
    </sDEF>
  </sheets>
</T3DataStructure>
